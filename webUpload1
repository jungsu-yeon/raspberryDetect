from flask import Flask, render_template, send_file, url_for
import os

app = Flask(__name__)
visitor_folder = 'static/visitor'

@app.route('/')
def main():
    today = '2024-03-21'  # 오늘 날짜를 표시하도록 변경해야 합니다.
    date_folders = os.listdir(visitor_folder)
    latest_date_folder = date_folders[-1] if date_folders else None
    images = []
    if latest_date_folder:
        latest_date_path = os.path.join(visitor_folder, latest_date_folder)
        images = [url_for('show_images', date=latest_date_folder, filename=image) for image in os.listdir(latest_date_path)]
    return render_template('index.html', today=today, date_folders=date_folders, images=images)

@app.route('/show_images/<date>/<filename>')
def show_images(date, filename):
    return send_file(os.path.join(visitor_folder, date, filename), mimetype='image/jpeg')

if __name__ == '__main__':
    app.run(host='0.0.0.0', port=5050, debug=True)
